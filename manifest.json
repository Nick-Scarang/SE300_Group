{
  "manifest_version": 3,
  "name": "UI",
  "version": "1.0",
  "description": "Controls the full UI.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "identity",
    "indentity.email"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.erau.instructure.com/*"],
      "js": [
        "js/UserSetup.js",
        "js/MainMenu.js",
        "js/Graphics.js",
        "js/CanvasInterface.js",
        "js/Master.js"
      ],
      "css": ["css/styles.css"],
      "run_at": "document_end"
    }
  ]
}
