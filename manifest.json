{
  "manifest_version": 3,
  "name": "UI",
  "version": "1.0",
  "description": "Controls the full UI.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "identity"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.erau.instructure.com/*"],
      "js": [
        "js/libs/tesseract.min.js",
        "TesseractHandler.js",
        "js/Scenes/UserSetup.js",
        "js/Scenes/MainMenu.js",
        "js/Scenes/SyllabusUpload.js",
        "js/Interfaces/UserInterface.js",
        "js/Interfaces/CanvasInterface.js",
        "js/Master.js"
      ],
      "css": ["css/styles.css"],
      "run_at": "document_end"
    }
  ]
}